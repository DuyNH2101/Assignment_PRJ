<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>URLAcceptanceFilter</filter-name>
        <filter-class>filter.URLAcceptanceFilter</filter-class>
    </filter>
    <filter>
        <filter-name>URLRequiredAuthenticationFilter</filter-name>
        <filter-class>filter.URLRequiredAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>URLRequiredAuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>URLAcceptanceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>StudentDetailController</servlet-name>
        <servlet-class>controller.student.StudentDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerDetailController</servlet-name>
        <servlet-class>controller.lecturer.LecturerDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerTakeExamController</servlet-name>
        <servlet-class>controller.lecturer.LecturerTakeExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssessmentViewController</servlet-name>
        <servlet-class>controller.assessment.AssessmentViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectChooseController</servlet-name>
        <servlet-class>controller.assessment.SubjectChooseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerCreateExamController</servlet-name>
        <servlet-class>controller.lecturer.LecturerCreateExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerChooseCourseController</servlet-name>
        <servlet-class>controller.lecturer.LecturerChooseCourseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerUpdateGradeController</servlet-name>
        <servlet-class>controller.lecturer.LecturerUpdateGradeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudentGradeController</servlet-name>
        <servlet-class>controller.grade.ViewStudentGradeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCourseGradeController</servlet-name>
        <servlet-class>controller.grade.ViewCourseGradeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSubjectGradeController</servlet-name>
        <servlet-class>controller.grade.ViewSubjectGradeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDetailController</servlet-name>
        <url-pattern>/student/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerDetailController</servlet-name>
        <url-pattern>/lecturer/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTakeExamController</servlet-name>
        <url-pattern>/lecturer/exam/take</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssessmentViewController</servlet-name>
        <url-pattern>/assessment/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectChooseController</servlet-name>
        <url-pattern>/assessment/choose</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerCreateExamController</servlet-name>
        <url-pattern>/lecturer/exam/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerChooseCourseController</servlet-name>
        <url-pattern>/lecturer/exam/choose</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerUpdateGradeController</servlet-name>
        <url-pattern>/lecturer/exam/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudentGradeController</servlet-name>
        <url-pattern>/grade/student/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCourseGradeController</servlet-name>
        <url-pattern>/grade/course/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSubjectGradeController</servlet-name>
        <url-pattern>/grade/subject/view</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
