<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>URLAcceptanceFilter</filter-name>
        <filter-class>filter.URLAcceptanceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>URLAcceptanceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>StudentDetailController</servlet-name>
        <servlet-class>controller.student.StudentDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerDetailController</servlet-name>
        <servlet-class>controller.lecturer.LecturerDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDetailController</servlet-name>
        <url-pattern>/student/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerDetailController</servlet-name>
        <url-pattern>/lecturer/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
